<div class="chatbox"
     tal:attributes="id options/box_id"
     tal:define="name options/name">

    <div class="cr-chat-head"> 
        <div class="chat-title">Chat Rooms</div> 
        <div class="chat-options"> 
            <a href="javascript:void(0)" 
               tal:attributes="onclick string:javascript:toggleChat('$name', 'chatroom')">-</a> 
            <a href="javascript:void(0)" 
               tal:attributes="onclick string:javascript:closeChat('$name', 'chatroom')">X</a> 
        </div>  
        <br clear="all"/> 
    </div> 
    <div class="chat-content oc-chat-content">
        <dl >
            <tal:loop repeat="chatroom options/chatrooms">  

                <dd tal:define="oddrow repeat/chatroom/odd;
                                fullname chatroom/Title"
                    tal:attributes="class python:oddrow and  'even' or 'odd'">
                <a  tal:content="fullname" 
                    style="cursor: pointer;"
                    tal:attributes="onclick string:jQuery.noConflict();; startChat('${chatroom/id}', '${chatroom/Title}', 'chatroom')"> 
                    chatroom Name 
                </a>
                </dd>
            </tal:loop>
        </dl>
    </div> 
</div>
