<div class="chatbox"
     tal:attributes="id options/box_id"
     tal:define="name options/name">

    <div class="cr-chat-head"> 
        <div class="chat-title">Chat Rooms</div> 
        <div class="chat-options"> 
            <a href="javascript:void(0)" 
               tal:attributes="onclick string:javascript:toggleChat('${options/box_id}')">-</a> 
            <a href="javascript:void(0)" 
               tal:attributes="onclick string:javascript:closeChat('${options/box_id}', '$name')">X</a> 
        </div>  
        <br clear="all"/> 
    </div> 
    <div class="chat-content oc-chat-content">
        <dl >
            <tal:loop repeat="chatroom options/chatrooms">  

                <dd tal:define="oddrow repeat/chatroom/odd;"
                    tal:attributes="class python:oddrow and  'even' or 'odd'">
                <a  tal:content="chatroom/Title" 
                    style="cursor: pointer;"
                    tal:attributes="onclick string:jQuery.noConflict();; startChat('chatbox_${chatroom/id}')"> 
                    chatroom Name 
                </a>
                </dd>
            </tal:loop>
        </dl>
    </div> 
</div>
