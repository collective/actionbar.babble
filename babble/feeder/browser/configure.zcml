<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="babble.client">

    <browser:resource
        name="chat_bottomfeeder.js"
        file="javascript/chat_bottomfeeder.js"
        />

    <browser:resource
        name="babblefeeder.css"
        file="stylesheets/babblefeeder.css"
        />

    <browser:viewlet  
        name="bottomfeeder.chat"
        manager="bottom.feeder.browser.interfaces.IBottomFeeder"
        class=".viewlets.ChatViewlet"
        permission="zope2.View" 
        layer=".interfaces.IBabbleFeederLayer"
        template="./templates/chat_viewlet.pt"
        />

    <browser:page
        for="*"
        attribute="render_chat_box"
        class=".chat.BabbleChatBox"
        name="render_chat_box"
        permission="zope2.View"
        layer=".interfaces.IBabbleFeederLayer"
        /> 

</configure>
